{% extends 'base.html.twig' %}

{% block title %}Liste des emprunts{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>


<div class="align">
<h1>Liste des emprunts </h1>
<img class = "IMG_PLUS" src={{ asset('images/plus.png') }} alt="Modifier le compte">
</div>

	<table>
		<thead>
			<tr>
				<th></th>
				<th>Type d'emprunt</th>
				<th>Banque</th>
				<th>Periodicité</th>
				<th>Montant de l'échéance</th>
				<th>Taux</th>
				<th>Montant restant dû</th>
			</tr>
		</thead>
		
		<tbody>
			{% for e in emprunts %}
				<tr>
					<td class = "IMGS_OPERATION">
						<img src={{ asset('images/pencil.png') }} alt="Modifier le compte">
						<img src={{ asset('images/bin.png') }} alt="Modifier le compte">
					</td>
					<td>{{ e.typeEmprunt.libelle}}</td>
					<td>{{ e.banque.nom}}</td>
					<td>{{ e.periodicite.libelle}}</td>
					<td>{{e.montantEcheance }}€</td>
					<td>{{e.taux}}%</td>
					<td>{{e.montantRestDu}}€</td>
				</tr>
				{% else %}
                    <td>Aucun emprunt n'a été trouvé.</td>
			{% endfor %}
		</tbody>
	</table>
		
{% endblock %}