{% extends 'base.html.twig' %}

{% block title %}Liste des opérations{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h2>Informations du compte :</h2>
        <p>Nom du compte : {{ compte.nom }}</p>
        <p>Solde : {{ compte.solde }}</p>
        <p>N° de compte : {{ compte.numero }}</p>
        <p>Type de compte : {{ compte.typeCompte.libelle }}</p>
    </div>

    <div class="example-wrapper">
        <h2>Opérations :</h2>
        <table border="1">
        {% for o in compte.operations %}


            <tr>

                <td>{{ o.montant }} €</td>
                <td>{{ o.libelle }}</td>




                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}