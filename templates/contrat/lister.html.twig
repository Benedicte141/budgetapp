{% extends 'base.html.twig' %}

{% block title %}Liste des contrats{% endblock %}

{% block body %}
    
    <div>
        <div class="align">
		<h1>Liste des contrats </h1>
	    <a href="{{ path('app_create_contrat') }}"><img src={{ asset('images/plus.png') }} class = "IMG_PLUS" alt="Créer un contrat"></a>
	</div>
        <table border="1">
                <thead>
                <tr>
                    <th></th>
                    <th>Type</th>
                    <th>Compagnie</th>
                    <th>Numéro client</th>
                    <th>Date de souscription</th>
                    <th>Montant</th>
                    <th>Périodicité</th>
                    <th>Couverture</th>
                </tr>
                </thead>
                <tbody>
                {% for c in contrats %}
                    <tr>
					    <td class = "IMGS_OPERATION">
				            <a href="{{ path('app_consulter_contrat', {'idContrat': c.id}) }}"><img src={{ asset('images/pencil.png') }} alt="Modifier le contrat"></a>
						    <a href="{{ path('app_delete_contrat', {'idContrat': c.id}) }}"><img src={{ asset('images/bin.png') }} alt="Supprimer le contrat"></a>
                        </td>
                        <td>{{ c.typeContrat.libelle }}</td>
                        <td>{{ c.compagnie.libelle }}</td>
                        <td>{{ c.numclient }}</td>
                        <td>{{ c.datesous |date('d/m/Y') }}</td>
                        <td>{{ c.montant }}</td>
                        <td>{{ c.periodicite.libelle }}</td>
                        <td>{{ c.libellecouverture }}</td>
                    </tr>
                    {% else %}
                    <td>Aucun contrat d'assurance n'a été trouvé.</td>
                {% endfor %}
                </tbody>
            </table>
    </div>
{% endblock %}