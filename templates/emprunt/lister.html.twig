{% extends 'base.html.twig' %}

{% block title %}Liste des emprunts{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="collapse-title text-xl font-medium">Liste des emprunts</div>

<div class="overflow-x-auto">
    <table class="table">
    <thead>
		<tr>
			<th>Type d'emprunt</th>
			<th>Banque</th>
			<th>Objet</th>
			<th>MontantInitial</th>
			<th>Periodicité</th>
			<th>Montant de l'échéance</th>
			<th>Taux</th>
			<th>Montant restant dû</th>
		</tr>
	</thead>

	<tbody>
		{% for e in emprunts %}
			<tr class="hover">
				<td>{{e.typeEmprunt.libelle}}</td>
				<td>{{e.banque.nom}}</td>
				<td>{{e.objet}}</td>
				<td>{{e.montantInitial}}€</td>
				<td>{{e.periodicite.libelle}}</td>
				<td>{{e.montantEcheance }}€</td>
				<td>{{e.taux}}%</td>
				<td>{{e.montantRestDu}}€</td>
			</tr>
		{% else %}
			<tr> Auncun emprunt n'a été trouvé</tr>
        {% endfor %}
	</tbody>
	</table>
</div>
{% endblock %}