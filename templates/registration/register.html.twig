{% extends 'base.html.twig' %}

{% block title %}S'inscrire{% endblock %}

{% block body %}

<style>
    #menu_nav{
        display:none
    }
</style>
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1>Register</h1>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.civilite) }}
        {{ form_row(registrationForm.nom) }}
        {{ form_row(registrationForm.prenom) }}
        {{ form_row(registrationForm.adresse) }}
        {{ form_row(registrationForm.cp) }}
        {{ form_row(registrationForm.ville) }}
        {{ form_row(registrationForm.pays) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
<div>
    <label class="flex items-center space-x-2">
        {{ form_widget(registrationForm.agreeTerms, { attr: { class: 'checkbox checkbox-primary' } }) }}
        <span>J'accepte les conditions d'utilisation</span>
    </label>
    {{ form_errors(registrationForm.agreeTerms) }}
</div>

<div class="flex justify-center mt-4">
<button
  type="submit"
  class="w-1/2 text-white bg-gray-900 hover:bg-gray-800 border border-gray-600 py-2 px-4 rounded-md transition"
>
    S'inscrire
</button>
</div>
    {{ form_rest(registrationForm) }}

    {{ form_end(registrationForm) }}
{% endblock %}
