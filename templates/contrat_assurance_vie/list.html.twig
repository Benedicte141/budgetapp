{% extends 'base.html.twig' %}

{% block title %}Liste des contrats d'assurance vie{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Liste des contrats d'assurance vie</h1>

    <table>
        <tr>
            <td>Nom</td>
            <td>Numéro</td>
            <td>Compagnie d'assurance</td>
            <td>Solde</td>
            <td>Date d'ouverture</td>
            <td>Montant du versement libre</td>
            <td>Périodicité du versement libre</td>
            <td>Montant de la valeur latente</td>
            <td>Total investi</td>
            <td>Total Racheté</td>
            <td>Mode de gestion</td>
        </tr>
		{% for c in contrats %}
		<tr>
			<td>{{ c.nom }}</td>
			<td>{{ c.numero}}</td>
			<td>{{ c.compagnieAssurance.nom}}</td>
			<td>{{ c.solde }}€</td>
			<td>{{ c.dateOuverture|date('d/m/Y') }}</td>
			<td>{{ c.montantVersementLibre}}€</td>
			<td>{{ c.periodicite.libelle}}</td>
			<td>{{ c.montantValueLatente}}€</td>
			<td>{{ c.totalInvestit}}€</td>
			<td>{{ c.totalRachete}}€</td>
			<td>{{ c.modeGestion.libelle}}</td>
		</tr>
	{% endfor %}
</table>
</div>
{% endblock %}
