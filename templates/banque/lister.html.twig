{% extends 'base.html.twig' %}

{% block title %}Lister les banques{% endblock %}

{% block body %}


<div class="example-wrapper">
<div class="align">
<h1>Liste des banques </h1>
<img class = "IMG_PLUS" src={{ asset('images/plus.png') }} alt="Modifier le compte">
</div>
    <a href="{{path('app_banque_ajouter')}}" class="btn btn-primary"> Ajouter une banque</a>
    <table>
        <tr>
            <th></th>
            <th>Nom de la banque</th>
        </tr>
        {% for b in banques %}
        <tr>
			<td><img src={{ asset('images/pencil.png') }} alt="Modifier le compte"></td>
            <td><a href="{{path('app_banque_details', { id: b.id }) }}">{{ b.nom }}</td>
        {% else %}
            <tr>
            <td>Aucune banque n'a été trouvée.</td>
            </tr>
        {% endfor %}
    </table>
</div>

{% endblock %}