{% extends 'base.html.twig' %}

{% block title %}Liste des contrats d'assurance{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h2>Contrats d'assurance</h2>
        <p>Type : {{ contrat.typeContrat.libelle }}</p>
        <p>Compagnie : {{ contrat.compagnie.libelle }}</p>
        <p>Numéro client : {{ contrat.num_client }}</p>
        <p>Date de souscription : {{ contrat.date_sous }}</p>
        <p>Montant : {{ contrat.montant }}</p>
        <p>Périodicité : {{ contrat.periodicite.libelle }}</p>
        <p>Couverture : {{ contrat.libelle_couverture }}</p>

    </div>


{% endblock %}