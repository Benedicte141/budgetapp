{% extends 'base.html.twig' %}

{% block title %}Liste des opérations{% endblock %}

{% block body %}

{% block stylesheets %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
{% endblock %}

    <div class="align">
		<h1>Liste des opérations </h1>
		<img src={{ asset('images/plus.png') }} alt="Modifier le compte">
	</div>
	
	
    <table>
		<thead>
			<tr>
				<th></th>
				<th>Compte</th>
				<th>Montant</th>
				<th>Libelle</th>
				<th>Date</th>
			</tr>
		</thead>    
		<tbody>
			{% for o in operations %}
				<tr>
					<td><img src={{ asset('images/pencil.png') }} alt="Modifier le compte"></td>
					<td>{{ o.compte.nom }} - {{ o.compte.numero}}</td>
					<td>{{ o.montant}} €</td>
					<td>{{ o.libelle}}</td>
					<td>{{ o.date|date('d/m/Y')}}</td>
				</tr>
				{% else %}
                    <td>Aucun compte n'a été trouvé.</td>
			{% endfor %}
		</tbody>
		
	</table>
{% endblock %}
