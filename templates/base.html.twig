<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        <link href="{{ asset('../assets/styles/output.css') }}" rel="stylesheet">
        
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body >
        <div class="flex h-screen">
            <!-- Menu de navigation avec le nom de l'utilisateur -->
            <nav class="bg-gray-100 flex-shrink-0 flex flex-col">
                <div class="p-4">
                    <h1>Bonjour
                        {% if app.user %}
                            {{ app.user.prenom }}!
                        {% else %}
                            Invité
                        *{% endif %}</h1>
                </div>

                <ul class="mt-4 space-y-2">
                    <li>
                        <a href="{{ path('app_compte_list') }}" class="block py-2 px-4 rounded hover:bg-base-300">
                            Comptes
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('app_emprunt_list') }}" class="block py-2 px-4 rounded hover:bg-base-300">
                            Emprunts
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('app_lister_contrat') }}" class="block py-2 px-4 rounded hover:bg-base-300">
                            Contrats d'assurance
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('app_contrat_assurance_vie_list') }}" class="block py-2 px-4 rounded hover:bg-base-300">
                            Contrats d'assurance vie
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('app_abonnement_liste') }}" class="block py-2 px-4 rounded hover:bg-base-300">
                            Abonnements
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('app_abonnement_liste') }}" class="block py-2 px-4 rounded hover:bg-base-300">
                            Opérations
                        </a>
                    </li>
                </ul>

                <!-- Bouton de modification des informations utilisateur -->
                <div class="mt-auto p-4 flex items-center justify-center">
                    {% if app.user %}
                        <a href="{{ path('app_modify_infos_user') }}" class="btn bg-base-content text-white">
                           Mes informations
                        </a>
                    {% endif %}
                </div>
            </nav>

            <!-- Contenu principal -->
            <main class="flex-1 p-6">
                {% block body %}{% endblock %}
            </main>
        </div>
    </body>
</html>
