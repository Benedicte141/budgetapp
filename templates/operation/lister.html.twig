{% extends 'base.html.twig' %}

{% block title %}Liste des opérations{% endblock %}

{% block body %}

{% block stylesheets %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
{% endblock %}

    <div class="align">
		<h1>Liste des opérations </h1>
	    <a href="{{ path('app_create_operation') }}"><img src={{ asset('images/plus.png') }} class = "IMG_PLUS" alt="Créer un operation"></a>
	</div>
	
	
    <table>
		<thead>
			<tr>
				<th></th>
				<th>Compte</th>
				<th>Montant</th>
				<th>Libelle</th>
				<th>Date</th>
			</tr>
		</thead>    
		<tbody>
			{% for o in operations %}
				<tr>
					<td class = "IMGS_OPERATION">
				        <a href="{{ path('app_consulter_operation', {'idOperation': o.id}) }}"><img src={{ asset('images/pencil.png') }} alt="Modifier l'opération"></a>
						<a href="{{ path('app_delete_operation', {'idOperation': o.id}) }}"><img src={{ asset('images/bin.png') }} alt="Supprimer l'opération"></a>
					</td>
					<td>{{ o.compte.nom }} - {{ o.compte.numero}}</td>
					<td>{{ o.montant}} €</td>
					<td>{{ o.libelle}}</td>
					<td>{{ o.date|date('d/m/Y')}}</td>
				</tr>
				{% else %}
                    <td>Aucune opération n'a été trouvé.</td>
			{% endfor %}
		</tbody>
		
	</table>
{% endblock %}
